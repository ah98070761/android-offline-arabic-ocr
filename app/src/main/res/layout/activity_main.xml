<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- ScrollView for Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/adView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قارئ النصوص العربي (OCR)"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Image/Content Preview -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"
                android:contentDescription="صورة أو معاينة محتوى"
                android:src="@drawable/ic_launcher_foreground"/>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختيار صورة / PDF (متعدد)"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#00796B"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnPerformOcr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تنفيذ عملية القراءة الضوئية (OCR)"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"/>
            
            <Button
                android:id="@+id/btnDeleteAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حذف كل النصوص المحفوظة"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"/>

            <!-- OCR Result Display -->
            <TextView
                android:id="@+id/tvOcrResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:padding="12dp"
                android:background="@drawable/text_background" 
                android:text="النتائج المستخرجة سيتم عرضها هنا وحفظها تلقائيًا."
                android:textSize="16sp"
                android:textColor="#555555"
                android:textAlignment="viewStart"
                android:layout_marginBottom="24dp"/>

            <!-- Placeholder for Saved Results (Optional) -->
             <TextView
                android:id="@+id/tvSavedResultsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="للاطلاع على النتائج المحفوظة، يرجى إعادة تشغيل التطبيق أو إضافة واجهة مستخدم مخصصة."
                android:textSize="14sp"
                android:textColor="#666666"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>

    <!-- 💡 AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" 
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
